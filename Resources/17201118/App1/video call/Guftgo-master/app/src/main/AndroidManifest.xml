<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.examroom">
    <uses-permission android:name="android.permission.CAMERA"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"></uses-permission>

    <application
        android:allowBackup="true"

        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.examroom.ScanIt" android:label="Scanit"  android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name="com.example.examroom.create" android:label="Create"  android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name="com.example.examroom.join"  android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name="com.example.examroom.select" android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name="com.example.examroom.home" android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name="com.example.examroom.DashboardActivity" android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="com.example.examroom.SignupActivity"
            android:label="New Account" android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.examroom.LoginActivity"
            android:label="Login" android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="com.example.examroom.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>